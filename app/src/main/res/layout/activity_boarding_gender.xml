<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".boardingpages.boardingGender">

    <TextView
        android:id="@+id/tempDataTextViewgend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp Data: "
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/tempDataTextViewgend2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp Data: "
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tempDataTextViewgend"
        />
    <TextView
        android:id="@+id/genderViewCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp Data: "
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tempDataTextViewgend2"

        />
    <ImageView
        android:id="@+id/boardingGenderImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/gender"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/boardingGenderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose your gender"
        android:textSize="35sp"
        android:textColor="#FA628D"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boardingGenderImage"
        />

    <TextView
        android:id="@+id/boardingGenderContextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let other people know more about you"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boardingGenderTitle"
        />
    <ImageView
        android:id="@+id/maleImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="64dp"
        android:src="@drawable/male"
        app:layout_constraintTop_toBottomOf="@+id/boardingGenderContextSmall"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Male"
        android:clickable="true"
        android:focusable="true"
        />

    <ImageView
        android:id="@+id/femaleImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/femenine"
        app:layout_constraintTop_toBottomOf="@+id/boardingGenderContextSmall"
        app:layout_constraintStart_toEndOf="@+id/maleImageView"
        android:contentDescription="Female"
        android:clickable="true"
        android:focusable="true"
        />
    <Button
        android:id="@+id/boardingGenderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/femaleImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
